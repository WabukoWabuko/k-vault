{
  "name": "k-vault",
  "version": "1.0.0",
  "description": "A Desktop application that will help in file arrangement, finding files easily and faster, finding specific words from documents to reduce perusing time.",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"tsc -w\" \"npm run dev:svelte\" \"wait-on http://localhost:5173 && electron-forge start\"",
    "build": "tsc && npm run build:svelte",
    "dev:svelte": "vite build --watch",
    "build:svelte": "vite build",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": ["electron", "svelte", "notes"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-vite": "^7.4.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^22.7.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@tiptap/core": "^2.7.3",
    "@tiptap/extension-link": "^2.7.3",
    "@tiptap/extension-markdown": "^2.7.3",
    "@tiptap/starter-kit": "^2.7.3",
    "better-sqlite3": "^11.5.0",
    "electron": "^32.1.2",
    "electron-squirrel-startup": "^1.0.0",
    "svelte": "^4.5.20"
  }
}
